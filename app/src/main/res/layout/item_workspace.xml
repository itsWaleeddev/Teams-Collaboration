<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Workspace Icon -->
            <ImageView
                android:id="@+id/workspaceIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/workspace"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Workspace Name -->
            <TextView
                android:id="@+id/workspaceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Workspace Name"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/actionButton"
                app:layout_constraintStart_toEndOf="@id/workspaceIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Workspace Description -->
            <TextView
                android:id="@+id/workspaceDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Workspace Description"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toStartOf="@id/actionButton"
                app:layout_constraintStart_toStartOf="@id/workspaceName"
                app:layout_constraintTop_toBottomOf="@id/workspaceName" />

            <!-- Number of Members -->
            <TextView
                android:id="@+id/workspaceMembers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Members: 0"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/workspaceName"
                app:layout_constraintTop_toBottomOf="@id/workspaceDescription" />

            <!-- Number of Tasks -->

            <!-- Action Button (e.g., View or Edit) -->
            <TextView
                android:id="@+id/workspaceTasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tasks: 0"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.586"
                app:layout_constraintStart_toEndOf="@+id/workspaceMembers"
                app:layout_constraintTop_toBottomOf="@id/workspaceDescription" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/actionButton"
                android:layout_width="90dp"
                android:layout_height="48dp"
                android:background="@drawable/button_design"
                android:padding="8dp"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSize" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>